                                <outline text="مُسْتَبْشِرَةٌ">
                                    <outline text="Rejoicing"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="40">
                        <outline text="وَوُجُوهٌ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌ">
