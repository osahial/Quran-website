<?xml version="1.0" encoding="UTF-8"?>
<opml version="1.0">
    <head>
        <title>Surah Al-Buruj
(Surah 85)</title>
    </head>
    <body>
        <outline text="Surah Al-Buruj
(Surah 85)">
            <outline text="1. Oath by Celestial
Creations (Verses 1–7)">
                <outline text="Swearing by the sky
and celestial events">
                    <outline text="1">
                        <outline text="وَالسَّمَاءِ ذَاتِ الْبُرُوجِ">
                            <outline text="By the sky containing
the constellations">
                                <outline text="وَالسَّمَاءِ">
                                    <outline text="And by the sky"></outline>
                                </outline>
                                <outline text="ذَاتِ">
                                    <outline text="Containing"></outline>
                                </outline>
                                <outline text="الْبُرُوجِ">
                                    <outline text="The constellations"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="2">
                        <outline text="وَالْيَوْمِ الْمَوْعُودِ">
                            <outline text="And by the promised Day">
                                <outline text="وَالْيَوْمِ">
                                    <outline text="And by the Day"></outline>
                                </outline>
                                <outline text="الْمَوْعُودِ">
                                    <outline text="Promised"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="3">
                        <outline text="وَشَاهِدٍ وَمَشْهُودٍ">
                            <outline text="And by the witness and
what is witnessed">
                                <outline text="وَشَاهِدٍ">
                                    <outline text="And by the witness"></outline>
                                </outline>
                                <outline text="وَمَشْهُودٍ">
                                    <outline text="And what is witnessed"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="The People of the Trench">
                    <outline text="4">
                        <outline text="قُتِلَ أَصْحَابُ الْأُخْدُودِ">
                            <outline text="Cursed were the
companions of the trench">
                                <outline text="قُتِلَ">
                                    <outline text="Cursed were"></outline>
                                </outline>
                                <outline text="أَصْحَابُ">
                                    <outline text="The companions"></outline>
                                </outline>
                                <outline text="الْأُخْدُودِ">
                                    <outline text="Of the trench"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="5">
                        <outline text="النَّارِ ذَاتِ الْوَقُودِ">
                            <outline text="The fire full of fuel">
                                <outline text="النَّارِ">
                                    <outline text="The fire"></outline>
                                </outline>
                                <outline text="ذَاتِ">
                                    <outline text="Full of"></outline>
                                </outline>
                                <outline text="الْوَقُودِ">
                                    <outline text="Fuel"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="6">
                        <outline text="إِذْ هُمْ عَلَيْهَا قُعُودٌ">
                            <outline text="When they sat by it">
                                <outline text="إِذْ">
                                    <outline text="When"></outline>
                                </outline>
                                <outline text="هُمْ">
                                    <outline text="They"></outline>
                                </outline>
                                <outline text="عَلَيْهَا">
                                    <outline text="By it"></outline>
                                </outline>
                                <outline text="قُعُودٌ">
                                    <outline text="Sat"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="7">
                        <outline text="وَهُمْ عَلَىٰ مَا يَفْعَلُونَ بِالْمُؤْمِنِينَ شُهُودٌ">
                            <outline text="And they, to what they were doing to
the believers, were witnesses">
                                <outline text="وَهُمْ">
                                    <outline text="And they"></outline>
                                </outline>
                                <outline text="عَلَىٰ">
                                    <outline text="To"></outline>
                                </outline>
                                <outline text="مَا">
                                    <outline text="What"></outline>
                                </outline>
                                <outline text="يَفْعَلُونَ">
                                    <outline text="They were doing"></outline>
                                </outline>
                                <outline text="بِالْمُؤْمِنِينَ">
                                    <outline text="To the believers"></outline>
                                </outline>
                                <outline text="شُهُودٌ">
                                    <outline text="Were witnesses"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
            <outline text="2. Condemnation of the
Oppressors (Verses 8–11)">
                <outline text="Their crime:
punishing
believers">
                    <outline text="8">
                        <outline text="وَمَا نَقَمُوا مِنْهُمْ إِلَّا أَنْ
يُؤْمِنُوا بِاللَّهِ الْعَزِيزِ الْحَمِيدِ">
                            <outline text="And they resented them only
because they believed in Allah, the
Exalted, the Praiseworthy">
                                <outline text="وَمَا">
                                    <outline text="And not"></outline>
                                </outline>
                                <outline text="نَقَمُوا">
                                    <outline text="They resented"></outline>
                                </outline>
                                <outline text="مِنْهُمْ">
                                    <outline text="Them"></outline>
                                </outline>
                                <outline text="إِلَّا">
                                    <outline text="Only"></outline>
                                </outline>
                                <outline text="أَنْ">
                                    <outline text="Because"></outline>
                                </outline>
                                <outline text="يُؤْمِنُوا">
                                    <outline text="They believed"></outline>
                                </outline>
                                <outline text="بِاللَّهِ">
                                    <outline text="In Allah"></outline>
                                </outline>
                                <outline text="الْعَزِيزِ">
                                    <outline text="The Exalted"></outline>
                                </outline>
                                <outline text="الْحَمِيدِ">
                                    <outline text="The Praiseworthy"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Allah’s dominion
and vengeance">
                    <outline text="9">
                        <outline text="الَّذِي لَهُ مُلْكُ السَّمَاوَاتِ وَالْأَرْضِ ۚ
وَاللَّهُ عَلَىٰ كُلِّ شَيْءٍ شَهِيدٌ">
                            <outline text="To whom belongs the dominion of the
heavens and the earth; and Allah is
over all things, a Witness">
                                <outline text="الَّذِي">
                                    <outline text="To whom"></outline>
                                </outline>
                                <outline text="لَهُ">
                                    <outline text="Belongs"></outline>
                                </outline>
                                <outline text="مُلْكُ">
                                    <outline text="The dominion"></outline>
                                </outline>
                                <outline text="السَّمَاوَاتِ">
                                    <outline text="Of the heavens"></outline>
                                </outline>
                                <outline text="وَالْأَرْضِ">
                                    <outline text="And the earth"></outline>
                                </outline>
                                <outline text="وَاللَّهُ">
                                    <outline text="And Allah"></outline>
                                </outline>
                                <outline text="عَلَىٰ">
                                    <outline text="Over"></outline>
                                </outline>
                                <outline text="كُلِّ">
                                    <outline text="All"></outline>
                                </outline>
                                <outline text="شَيْءٍ">
                                    <outline text="Things"></outline>
                                </outline>
                                <outline text="شَهِيدٌ">
                                    <outline text="A Witness"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="10">
                        <outline text="إِنَّ الَّذِينَ فَتَنُوا الْمُؤْمِنِينَ وَالْمُؤْمِنَاتِ ثُمَّ لَمْ يَتُوبُوا
فَلَهُمْ عَذَابُ جَهَنَّمَ وَلَهُمْ عَذَابُ الْحَرِيقِ">
                            <outline text="Indeed, those who have tortured the believing men
and believing women and then have not repented, for
them is the punishment of Hell, and for them is the
punishment of burning">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="الَّذِينَ">
                                    <outline text="Those who"></outline>
                                </outline>
                                <outline text="فَتَنُوا">
                                    <outline text="Have tortured"></outline>
                                </outline>
                                <outline text="الْمُؤْمِنِينَ">
                                    <outline text="The believing men"></outline>
                                </outline>
                                <outline text="وَالْمُؤْمِنَاتِ">
                                    <outline text="And the believing women"></outline>
                                </outline>
                                <outline text="ثُمَّ">
                                    <outline text="Then"></outline>
                                </outline>
                                <outline text="لَمْ">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَتُوبُوا">
                                    <outline text="They have repented"></outline>
                                </outline>
                                <outline text="فَلَهُمْ">
                                    <outline text="Then for them"></outline>
                                </outline>
                                <outline text="عَذَابُ">
                                    <outline text="The punishment"></outline>
                                </outline>
                                <outline text="جَهَنَّمَ">
                                    <outline text="Of Hell"></outline>
                                </outline>
                                <outline text="وَلَهُمْ">
                                    <outline text="And for them"></outline>
                                </outline>
                                <outline text="عَذَابُ">
                                    <outline text="The punishment"></outline>
                                </outline>
                                <outline text="الْحَرِيقِ">
                                    <outline text="Of burning"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Reward of the believers">
                    <outline text="11">
                        <outline text="إِنَّ الَّذِينَ آمَنُوا وَعَمِلُوا الصَّالِحَاتِ لَهُمْ جَنَّاتٌ تَجْرِي
مِنْ تَحْتِهَا الْأَنْهَارُ ۚ ذَٰلِكَ الْفَوْزُ الْكَبِيرُ">
                            <outline text="Indeed, those who have believed and done righteous
deeds, for them are gardens beneath which rivers
flow; that is the great success">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="الَّذِينَ">
                                    <outline text="Those who"></outline>
                                </outline>
                                <outline text="آمَنُوا">
                                    <outline text="Have believed"></outline>
                                </outline>
                                <outline text="وَعَمِلُوا">
                                    <outline text="And done"></outline>
                                </outline>
                                <outline text="الصَّالِحَاتِ">
                                    <outline text="Righteous deeds"></outline>
                                </outline>
                                <outline text="لَهُمْ">
                                    <outline text="For them"></outline>
                                </outline>
                                <outline text="جَنَّاتٌ">
                                    <outline text="Are gardens"></outline>
                                </outline>
                                <outline text="تَجْرِي">
                                    <outline text="Flow"></outline>
                                </outline>
                                <outline text="مِنْ">
                                    <outline text="Beneath"></outline>
                                </outline>
                                <outline text="تَحْتِهَا">
                                    <outline text="Which"></outline>
                                </outline>
                                <outline text="الْأَنْهَارُ">
                                    <outline text="Rivers"></outline>
                                </outline>
                                <outline text="ذَٰلِكَ">
                                    <outline text="That"></outline>
                                </outline>
                                <outline text="الْفَوْزُ">
                                    <outline text="The success"></outline>
                                </outline>
                                <outline text="الْكَبِيرُ">
                                    <outline text="Great"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
            <outline text="3. Allah’s Power and
Warning (Verses 12–22)">
                <outline text="Allah’s irresistible might">
                    <outline text="12">
                        <outline text="إِنَّ بَطْشَ رَبِّكَ لَشَدِيدٌ">
                            <outline text="Indeed, the vengeance of
your Lord is severe">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="بَطْشَ">
                                    <outline text="The vengeance"></outline>
                                </outline>
                                <outline text="رَبِّكَ">
                                    <outline text="Of your Lord"></outline>
                                </outline>
                                <outline text="لَشَدِيدٌ">
                                    <outline text="Is severe"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="13">
                        <outline text="إِنَّهُ هُوَ يُبْدِئُ وَيُعِيدُ">
                            <outline text="Indeed, it is He who
originates and repeats">
                                <outline text="إِنَّهُ">
                                    <outline text="Indeed He"></outline>
                                </outline>
                                <outline text="هُوَ">
                                    <outline text="It is He"></outline>
                                </outline>
                                <outline text="يُبْدِئُ">
                                    <outline text="Originates"></outline>
                                </outline>
                                <outline text="وَيُعِيدُ">
                                    <outline text="And repeats"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="14">
                        <outline text="وَهُوَ الْغَفُورُ الْوَدُودُ">
                            <outline text="And He is the Forgiving,
the Affectionate">
                                <outline text="وَهُوَ">
                                    <outline text="And He"></outline>
                                </outline>
                                <outline text="الْغَفُورُ">
                                    <outline text="The Forgiving"></outline>
                                </outline>
                                <outline text="الْوَدُودُ">
                                    <outline text="The Affectionate"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="15">
                        <outline text="ذُو الْعَرْشِ الْمَجِيدُ">
                            <outline text="Owner of the
Throne, the
Glorious">
                                <outline text="ذُو">
                                    <outline text="Owner"></outline>
                                </outline>
                                <outline text="الْعَرْشِ">
                                    <outline text="Of the Throne"></outline>
                                </outline>
                                <outline text="الْمَجِيدُ">
                                    <outline text="The Glorious"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="16">
                        <outline text="فَعَّالٌ لِمَا يُرِيدُ">
                            <outline text="Effecter of what
He intends">
                                <outline text="فَعَّالٌ">
                                    <outline text="Effecter"></outline>
                                </outline>
                                <outline text="لِمَا">
                                    <outline text="Of what"></outline>
                                </outline>
                                <outline text="يُرِيدُ">
                                    <outline text="He intends"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Historical warnings">
                    <outline text="17">
                        <outline text="هَلْ أَتَاكَ حَدِيثُ الْجُنُودِ">
                            <outline text="Has there reached you the
story of the soldiers">
                                <outline text="هَلْ">
                                    <outline text="Has"></outline>
                                </outline>
                                <outline text="أَتَاكَ">
                                    <outline text="Reached you"></outline>
                                </outline>
                                <outline text="حَدِيثُ">
                                    <outline text="The story"></outline>
                                </outline>
                                <outline text="الْجُنُودِ">
                                    <outline text="Of the soldiers"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="18">
                        <outline text="فِرْعَوْنَ وَثَمُودَ">
                            <outline text="Of Pharaoh and Thamud">
                                <outline text="فِرْعَوْنَ">
                                    <outline text="Pharaoh"></outline>
                                </outline>
                                <outline text="وَثَمُودَ">
                                    <outline text="And Thamud"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Denial and divine record">
                    <outline text="19">
                        <outline text="بَلِ الَّذِينَ كَفَرُوا فِي تَكْذِيبٍ">
                            <outline text="But those who
disbelieve are in
denial">
                                <outline text="بَلِ">
                                    <outline text="But"></outline>
                                </outline>
                                <outline text="الَّذِينَ">
                                    <outline text="Those who"></outline>
                                </outline>
                                <outline text="كَفَرُوا">
                                    <outline text="Disbelieve"></outline>
                                </outline>
                                <outline text="فِي">
                                    <outline text="In"></outline>
                                </outline>
                                <outline text="تَكْذِيبٍ">
                                    <outline text="Denial"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="20">
                        <outline text="وَاللَّهُ مِنْ وَرَائِهِمْ مُحِيطٌ">
                            <outline text="And Allah, from behind
them, is encompassing">
                                <outline text="وَاللَّهُ">
                                    <outline text="And Allah"></outline>
                                </outline>
                                <outline text="مِنْ">
                                    <outline text="From"></outline>
                                </outline>
                                <outline text="وَرَائِهِمْ">
                                    <outline text="Behind them"></outline>
                                </outline>
                                <outline text="مُحِيطٌ">
                                    <outline text="Is encompassing"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="The glorious Quran">
                    <outline text="21">
                        <outline text="بَلْ هُوَ قُرْآنٌ مَجِيدٌ">
                            <outline text="Rather, it is a
glorious Quran">
                                <outline text="بَلْ">
                                    <outline text="Rather"></outline>
                                </outline>
                                <outline text="هُوَ">
                                    <outline text="It is"></outline>
                                </outline>
                                <outline text="قُرْآنٌ">
                                    <outline text="A Quran"></outline>
                                </outline>
                                <outline text="مَجِيدٌ">
                                    <outline text="Glorious"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="22">
                        <outline text="فِي لَوْحٍ مَحْفُوظٍ">
                            <outline text="In a Preserved Tablet">
                                <outline text="فِي">
                                    <outline text="In"></outline>
                                </outline>
                                <outline text="لَوْحٍ">
                                    <outline text="A Tablet"></outline>
                                </outline>
                                <outline text="مَحْفُوظٍ">
                                    <outline text="Preserved"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
        </outline>
    </body>
</opml>