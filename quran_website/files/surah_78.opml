<?xml version="1.0" encoding="UTF-8"?>
<opml version="1.0">
    <head>
        <title>Surah An-Naba
(Surah 78)</title>
    </head>
    <body>
        <outline text="Surah An-Naba
(Surah 78)">
            <outline text="1. Signs of Creation and
Dispute (Verses 1–16)">
                <outline text="Questioning the
great news">
                    <outline text="1">
                        <outline text="عَمَّ يَتَسَاءَلُونَ">
                            <outline text="About what are they
asking one another">
                                <outline text="عَمَّ">
                                    <outline text="About what"></outline>
                                </outline>
                                <outline text="يَتَسَاءَلُونَ">
                                    <outline text="Are they asking
one another"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="2">
                        <outline text="عَنِ النَّبَإِ الْعَظِيمِ">
                            <outline text="About the great news">
                                <outline text="عَنِ">
                                    <outline text="About"></outline>
                                </outline>
                                <outline text="النَّبَإِ">
                                    <outline text="The news"></outline>
                                </outline>
                                <outline text="الْعَظِيمِ">
                                    <outline text="Great"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="3">
                        <outline text="الَّذِي هُمْ فِيهِ مُخْتَلِفُونَ">
                            <outline text="That over which they are
in disagreement">
                                <outline text="الَّذِي">
                                    <outline text="That"></outline>
                                </outline>
                                <outline text="هُمْ">
                                    <outline text="They"></outline>
                                </outline>
                                <outline text="فِيهِ">
                                    <outline text="In it"></outline>
                                </outline>
                                <outline text="مُخْتَلِفُونَ">
                                    <outline text="Are in disagreement"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Affirmation of truth">
                    <outline text="4">
                        <outline text="كَلَّا سَيَعْلَمُونَ">
                            <outline text="Nay, they will
come to know">
                                <outline text="كَلَّا">
                                    <outline text="Nay"></outline>
                                </outline>
                                <outline text="سَيَعْلَمُونَ">
                                    <outline text="They will come to know"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="5">
                        <outline text="ثُمَّ كَلَّا سَيَعْلَمُونَ">
                            <outline text="Then, nay, they will
come to know">
                                <outline text="ثُمَّ">
                                    <outline text="Then"></outline>
                                </outline>
                                <outline text="كَلَّا">
                                    <outline text="Nay"></outline>
                                </outline>
                                <outline text="سَيَعْلَمُونَ">
                                    <outline text="They will come to know"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Signs in creation">
                    <outline text="6">
                        <outline text="أَلَمْ نَجْعَلِ الْأَرْضَ مِهَادًا">
                            <outline text="Have We not made the
earth a resting place">
                                <outline text="أَلَمْ">
                                    <outline text="Have not"></outline>
                                </outline>
                                <outline text="نَجْعَلِ">
                                    <outline text="We made"></outline>
                                </outline>
                                <outline text="الْأَرْضَ">
                                    <outline text="The earth"></outline>
                                </outline>
                                <outline text="مِهَادًا">
                                    <outline text="A resting place"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="7">
                        <outline text="وَالْجِبَالَ أَوْتَادًا">
                            <outline text="And the
mountains as
stakes">
                                <outline text="وَالْجِبَالَ">
                                    <outline text="And the mountains"></outline>
                                </outline>
                                <outline text="أَوْتَادًا">
                                    <outline text="As stakes"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="8">
                        <outline text="وَخَلَقْنَاكُمْ أَزْوَاجًا">
                            <outline text="And We created
you in pairs">
                                <outline text="وَخَلَقْنَاكُمْ">
                                    <outline text="And We created you"></outline>
                                </outline>
                                <outline text="أَزْوَاجًا">
                                    <outline text="In pairs"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="9">
                        <outline text="وَجَعَلْنَا نَوْمَكُمْ سُبَاتًا">
                            <outline text="And We made your
sleep for rest">
                                <outline text="وَجَعَلْنَا">
                                    <outline text="And We made"></outline>
                                </outline>
                                <outline text="نَوْمَكُمْ">
                                    <outline text="Your sleep"></outline>
                                </outline>
                                <outline text="سُبَاتًا">
                                    <outline text="For rest"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="10">
                        <outline text="وَجَعَلْنَا اللَّيْلَ لِبَاسًا">
                            <outline text="And We made the
night as clothing">
                                <outline text="وَجَعَلْنَا">
                                    <outline text="And We made"></outline>
                                </outline>
                                <outline text="اللَّيْلَ">
                                    <outline text="The night"></outline>
                                </outline>
                                <outline text="لِبَاسًا">
                                    <outline text="As clothing"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="11">
                        <outline text="وَجَعَلْنَا النَّهَارَ مَعَاشًا">
                            <outline text="And We made the
day for livelihood">
                                <outline text="وَجَعَلْنَا">
                                    <outline text="And We made"></outline>
                                </outline>
                                <outline text="النَّهَارَ">
                                    <outline text="The day"></outline>
                                </outline>
                                <outline text="مَعَاشًا">
                                    <outline text="For livelihood"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="12">
                        <outline text="وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًا">
                            <outline text="And We constructed above you
seven strong heavens">
                                <outline text="وَبَنَيْنَا">
                                    <outline text="And We constructed"></outline>
                                </outline>
                                <outline text="فَوْقَكُمْ">
                                    <outline text="Above you"></outline>
                                </outline>
                                <outline text="سَبْعًا">
                                    <outline text="Seven"></outline>
                                </outline>
                                <outline text="شِدَادًا">
                                    <outline text="Strong"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="13">
                        <outline text="وَجَعَلْنَا سِرَاجًا وَهَّاجًا">
                            <outline text="And We made a
blazing lamp">
                                <outline text="وَجَعَلْنَا">
                                    <outline text="And We made"></outline>
                                </outline>
                                <outline text="سِرَاجًا">
                                    <outline text="A lamp"></outline>
                                </outline>
                                <outline text="وَهَّاجًا">
                                    <outline text="Blazing"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="14">
                        <outline text="وَأَنْزَلْنَا مِنَ الْمُعْصِرَاتِ مَاءً ثَجَّاجًا">
                            <outline text="And We sent down from the rain
clouds abundant water">
                                <outline text="وَأَنْزَلْنَا">
                                    <outline text="And We sent down"></outline>
                                </outline>
                                <outline text="مِنَ">
                                    <outline text="From"></outline>
                                </outline>
                                <outline text="الْمُعْصِرَاتِ">
                                    <outline text="The rain clouds"></outline>
                                </outline>
                                <outline text="مَاءً">
                                    <outline text="Water"></outline>
                                </outline>
                                <outline text="ثَجَّاجًا">
                                    <outline text="Abundant"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="15">
                        <outline text="لِنُخْرِجَ بِهِ حَبًّا وَنَبَاتًا">
                            <outline text="That We may produce thereby
grain and vegetation">
                                <outline text="لِنُخْرِجَ">
                                    <outline text="That We may produce"></outline>
                                </outline>
                                <outline text="بِهِ">
                                    <outline text="Thereby"></outline>
                                </outline>
                                <outline text="حَبًّا">
                                    <outline text="Grain"></outline>
                                </outline>
                                <outline text="وَنَبَاتًا">
                                    <outline text="And vegetation"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="16">
                        <outline text="وَجَنَّاتٍ أَلْفَافًا">
                            <outline text="And gardens of
entwined growth">
                                <outline text="وَجَنَّاتٍ">
                                    <outline text="And gardens"></outline>
                                </outline>
                                <outline text="أَلْفَافًا">
                                    <outline text="Of entwined growth"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
            <outline text="2. The Day of
Judgment (Verses
17–30)">
                <outline text="Inevitability of the Day">
                    <outline text="17">
                        <outline text="إِنَّ يَوْمَ الْفَصْلِ كَانَ مِيقَاتًا">
                            <outline text="Indeed, the Day of Decision
is an appointed time">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="يَوْمَ">
                                    <outline text="The Day"></outline>
                                </outline>
                                <outline text="الْفَصْلِ">
                                    <outline text="Of Decision"></outline>
                                </outline>
                                <outline text="كَانَ">
                                    <outline text="Is"></outline>
                                </outline>
                                <outline text="مِيقَاتًا">
                                    <outline text="An appointed time"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="18">
                        <outline text="يَوْمَ يُنْفَخُ فِي الصُّورِ فَتَأْتُونَ أَفْوَاجًا">
                            <outline text="The Day the Trumpet is blown, and
you will come forth in groups">
                                <outline text="يَوْمَ">
                                    <outline text="The Day"></outline>
                                </outline>
                                <outline text="يُنْفَخُ">
                                    <outline text="Is blown"></outline>
                                </outline>
                                <outline text="فِي">
                                    <outline text="In"></outline>
                                </outline>
                                <outline text="الصُّورِ">
                                    <outline text="The Trumpet"></outline>
                                </outline>
                                <outline text="فَتَأْتُونَ">
                                    <outline text="And you will come forth"></outline>
                                </outline>
                                <outline text="أَفْوَاجًا">
                                    <outline text="In groups"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="19">
                        <outline text="وَفُتِحَتِ السَّمَاءُ فَكَانَتْ أَبْوَابًا">
                            <outline text="And the heaven is opened and
will become gateways">
                                <outline text="وَفُتِحَتِ">
                                    <outline text="And is opened"></outline>
                                </outline>
                                <outline text="السَّمَاءُ">
                                    <outline text="The heaven"></outline>
                                </outline>
                                <outline text="فَكَانَتْ">
                                    <outline text="And will become"></outline>
                                </outline>
                                <outline text="أَبْوَابًا">
                                    <outline text="Gateways"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="20">
                        <outline text="وَسُيِّرَتِ الْجِبَالُ فَكَانَتْ سَرَابًا">
                            <outline text="And the mountains are moved
and will become a mirage">
                                <outline text="وَسُيِّرَتِ">
                                    <outline text="And are moved"></outline>
                                </outline>
                                <outline text="الْجِبَالُ">
                                    <outline text="The mountains"></outline>
                                </outline>
                                <outline text="فَكَانَتْ">
                                    <outline text="And will become"></outline>
                                </outline>
                                <outline text="سَرَابًا">
                                    <outline text="A mirage"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Hellfire as a waiting place">
                    <outline text="21">
                        <outline text="إِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًا">
                            <outline text="Indeed, Hell has
been lying in wait">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="جَهَنَّمَ">
                                    <outline text="Hell"></outline>
                                </outline>
                                <outline text="كَانَتْ">
                                    <outline text="Has been"></outline>
                                </outline>
                                <outline text="مِرْصَادًا">
                                    <outline text="Lying in wait"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="22">
                        <outline text="لِلطَّاغِينَ مَآبًا">
                            <outline text="For the transgressors,
a place of return">
                                <outline text="لِلطَّاغِينَ">
                                    <outline text="For the transgressors"></outline>
                                </outline>
                                <outline text="مَآبًا">
                                    <outline text="A place of return"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="23">
                        <outline text="لَابِثِينَ فِيهَا أَحْقَابًا">
                            <outline text="They will remain
therein for ages">
                                <outline text="لَابِثِينَ">
                                    <outline text="They will remain"></outline>
                                </outline>
                                <outline text="فِيهَا">
                                    <outline text="Therein"></outline>
                                </outline>
                                <outline text="أَحْقَابًا">
                                    <outline text="For ages"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="24">
                        <outline text="لَا يَذُوقُونَ فِيهَا بَرْدًا وَلَا شَرَابًا">
                            <outline text="They will not taste therein
coolness or drink">
                                <outline text="لَا">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَذُوقُونَ">
                                    <outline text="They will taste"></outline>
                                </outline>
                                <outline text="فِيهَا">
                                    <outline text="Therein"></outline>
                                </outline>
                                <outline text="بَرْدًا">
                                    <outline text="Coolness"></outline>
                                </outline>
                                <outline text="وَلَا">
                                    <outline text="Nor"></outline>
                                </outline>
                                <outline text="شَرَابًا">
                                    <outline text="Drink"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="25">
                        <outline text="إِلَّا حَمِيمًا وَغَسَّاقًا">
                            <outline text="Except scalding water
and purulence">
                                <outline text="إِلَّا">
                                    <outline text="Except"></outline>
                                </outline>
                                <outline text="حَمِيمًا">
                                    <outline text="Scalding water"></outline>
                                </outline>
                                <outline text="وَغَسَّاقًا">
                                    <outline text="And purulence"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="26">
                        <outline text="جَزَاءً وِفَاقًا">
                            <outline text="An appropriate
recompense">
                                <outline text="جَزَاءً">
                                    <outline text="A recompense"></outline>
                                </outline>
                                <outline text="وِفَاقًا">
                                    <outline text="Appropriate"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Cause of punishment">
                    <outline text="27">
                        <outline text="إِنَّهُمْ كَانُوا لَا يَرْجُونَ حِسَابًا">
                            <outline text="Indeed, they were not
expecting an account">
                                <outline text="إِنَّهُمْ">
                                    <outline text="Indeed they"></outline>
                                </outline>
                                <outline text="كَانُوا">
                                    <outline text="Were"></outline>
                                </outline>
                                <outline text="لَا">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَرْجُونَ">
                                    <outline text="Expecting"></outline>
                                </outline>
                                <outline text="حِسَابًا">
                                    <outline text="An account"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="28">
                        <outline text="وَكَذَّبُوا بِآيَاتِنَا كِذَّابًا">
                            <outline text="And they denied Our
signs completely">
                                <outline text="وَكَذَّبُوا">
                                    <outline text="And they denied"></outline>
                                </outline>
                                <outline text="بِآيَاتِنَا">
                                    <outline text="Our signs"></outline>
                                </outline>
                                <outline text="كِذَّابًا">
                                    <outline text="Completely"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="29">
                        <outline text="وَكُلَّ شَيْءٍ أَحْصَيْنَاهُ كِتَابًا">
                            <outline text="And everything We have
recorded in a book">
                                <outline text="وَكُلَّ">
                                    <outline text="And every"></outline>
                                </outline>
                                <outline text="شَيْءٍ">
                                    <outline text="Thing"></outline>
                                </outline>
                                <outline text="أَحْصَيْنَاهُ">
                                    <outline text="We have recorded"></outline>
                                </outline>
                                <outline text="كِتَابًا">
                                    <outline text="In a book"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="30">
                        <outline text="فَذُوقُوا فَلَنْ نَزِيدَكُمْ إِلَّا عَذَابًا">
                            <outline text="So taste, for We will not increase
you except in punishment">
                                <outline text="فَذُوقُوا">
                                    <outline text="So taste"></outline>
                                </outline>
                                <outline text="فَلَنْ">
                                    <outline text="For never"></outline>
                                </outline>
                                <outline text="نَزِيدَكُمْ">
                                    <outline text="We will increase you"></outline>
                                </outline>
                                <outline text="إِلَّا">
                                    <outline text="Except"></outline>
                                </outline>
                                <outline text="عَذَابًا">
                                    <outline text="In punishment"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
            <outline text="3. Reward of the
Righteous (Verses
31–40)">
                <outline text="Success of the righteous">
                    <outline text="31">
                        <outline text="إِنَّ لِلْمُتَّقِينَ مَفَازًا">
                            <outline text="Indeed, for the
righteous is success">
                                <outline text="إِنَّ">
                                    <outline text="Indeed"></outline>
                                </outline>
                                <outline text="لِلْمُتَّقِينَ">
                                    <outline text="For the righteous"></outline>
                                </outline>
                                <outline text="مَفَازًا">
                                    <outline text="Success"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="32">
                        <outline text="حَدَائِقَ وَأَعْنَابًا">
                            <outline text="Gardens and grapevines">
                                <outline text="حَدَائِقَ">
                                    <outline text="Gardens"></outline>
                                </outline>
                                <outline text="وَأَعْنَابًا">
                                    <outline text="And grapevines"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="33">
                        <outline text="وَكَوَاعِبَ أَتْرَابًا">
                            <outline text="And full-breasted
companions of equal age">
                                <outline text="وَكَوَاعِبَ">
                                    <outline text="And full-breasted"></outline>
                                </outline>
                                <outline text="أَتْرَابًا">
                                    <outline text="Of equal age"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="34">
                        <outline text="وَكَأْسًا دِهَاقًا">
                            <outline text="And a full cup">
                                <outline text="وَكَأْسًا">
                                    <outline text="And a cup"></outline>
                                </outline>
                                <outline text="دِهَاقًا">
                                    <outline text="Full"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Absence of harm">
                    <outline text="35">
                        <outline text="لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا كِذَّابًا">
                            <outline text="They will not hear therein
idle talk or falsehood">
                                <outline text="لَا">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَسْمَعُونَ">
                                    <outline text="They will hear"></outline>
                                </outline>
                                <outline text="فِيهَا">
                                    <outline text="Therein"></outline>
                                </outline>
                                <outline text="لَغْوًا">
                                    <outline text="Idle talk"></outline>
                                </outline>
                                <outline text="وَلَا">
                                    <outline text="Nor"></outline>
                                </outline>
                                <outline text="كِذَّابًا">
                                    <outline text="Falsehood"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Reward from Allah">
                    <outline text="36">
                        <outline text="جَزَاءً مِنْ رَبِّكَ عَطَاءً حِسَابًا">
                            <outline text="A reward from your Lord, a gift
according to account">
                                <outline text="جَزَاءً">
                                    <outline text="A reward"></outline>
                                </outline>
                                <outline text="مِنْ">
                                    <outline text="From"></outline>
                                </outline>
                                <outline text="رَبِّكَ">
                                    <outline text="Your Lord"></outline>
                                </outline>
                                <outline text="عَطَاءً">
                                    <outline text="A gift"></outline>
                                </outline>
                                <outline text="حِسَابًا">
                                    <outline text="According to account"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="37">
                        <outline text="رَبِّ السَّمَاوَاتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا
الرَّحْمَٰنِ لَا يَمْلِكُونَ مِنْهُ خِطَابًا">
                            <outline text="Lord of the heavens and the earth and whatever is
between them, the Most Merciful; they possess not
from Him the right of speech">
                                <outline text="رَبِّ">
                                    <outline text="Lord"></outline>
                                </outline>
                                <outline text="السَّمَاوَاتِ">
                                    <outline text="Of the heavens"></outline>
                                </outline>
                                <outline text="وَالْأَرْضِ">
                                    <outline text="And the earth"></outline>
                                </outline>
                                <outline text="وَمَا">
                                    <outline text="And whatever"></outline>
                                </outline>
                                <outline text="بَيْنَهُمَا">
                                    <outline text="Is between them"></outline>
                                </outline>
                                <outline text="الرَّحْمَٰنِ">
                                    <outline text="The Most Merciful"></outline>
                                </outline>
                                <outline text="لَا">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَمْلِكُونَ">
                                    <outline text="They possess"></outline>
                                </outline>
                                <outline text="مِنْهُ">
                                    <outline text="From Him"></outline>
                                </outline>
                                <outline text="خِطَابًا">
                                    <outline text="The right of speech"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Day of awe">
                    <outline text="38">
                        <outline text="يَوْمَ يَقُومُ الرُّوحُ وَالْمَلَائِكَةُ صَفًّا لَا يَتَكَلَّمُونَ إِلَّا
مَنْ أَذِنَ لَهُ الرَّحْمَٰنُ وَقَالَ صَوَابًا">
                            <outline text="The Day when the Spirit and the angels will stand in rows,
they will not speak except for one whom the Most Merciful
permits, and he will say what is correct">
                                <outline text="يَوْمَ">
                                    <outline text="The Day"></outline>
                                </outline>
                                <outline text="يَقُومُ">
                                    <outline text="Will stand"></outline>
                                </outline>
                                <outline text="الرُّوحُ">
                                    <outline text="The Spirit"></outline>
                                </outline>
                                <outline text="وَالْمَلَائِكَةُ">
                                    <outline text="And the angels"></outline>
                                </outline>
                                <outline text="صَفًّا">
                                    <outline text="In rows"></outline>
                                </outline>
                                <outline text="لَا">
                                    <outline text="Not"></outline>
                                </outline>
                                <outline text="يَتَكَلَّمُونَ">
                                    <outline text="They will speak"></outline>
                                </outline>
                                <outline text="إِلَّا">
                                    <outline text="Except"></outline>
                                </outline>
                                <outline text="مَنْ">
                                    <outline text="One whom"></outline>
                                </outline>
                                <outline text="أَذِنَ">
                                    <outline text="Permits"></outline>
                                </outline>
                                <outline text="لَهُ">
                                    <outline text="For him"></outline>
                                </outline>
                                <outline text="الرَّحْمَٰنُ">
                                    <outline text="The Most Merciful"></outline>
                                </outline>
                                <outline text="وَقَالَ">
                                    <outline text="And he will say"></outline>
                                </outline>
                                <outline text="صَوَابًا">
                                    <outline text="What is correct"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                    <outline text="39">
                        <outline text="ذَٰلِكَ الْيَوْمُ الْحَقُّ فَمَنْ شَاءَ
اتَّخَذَ إِلَىٰ رَبِّهِ مَآبًا">
                            <outline text="That Day is the truth, so whoever wills may
take to his Lord a place of return">
                                <outline text="ذَٰلِكَ">
                                    <outline text="That"></outline>
                                </outline>
                                <outline text="الْيَوْمُ">
                                    <outline text="Day"></outline>
                                </outline>
                                <outline text="الْحَقُّ">
                                    <outline text="Is the truth"></outline>
                                </outline>
                                <outline text="فَمَنْ">
                                    <outline text="So whoever"></outline>
                                </outline>
                                <outline text="شَاءَ">
                                    <outline text="Wills"></outline>
                                </outline>
                                <outline text="اتَّخَذَ">
                                    <outline text="May take"></outline>
                                </outline>
                                <outline text="إِلَىٰ">
                                    <outline text="To"></outline>
                                </outline>
                                <outline text="رَبِّهِ">
                                    <outline text="His Lord"></outline>
                                </outline>
                                <outline text="مَآبًا">
                                    <outline text="A place of return"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
                <outline text="Final warning">
                    <outline text="40">
                        <outline text="إِنَّا أَنْذَرْنَاكُمْ عَذَابًا قَرِيبًا يَوْمَ يَنْظُرُ الْمَرْءُ مَا قَدَّمَتْ
يَدَاهُ وَيَقُولُ الْكَافِرُ يَا لَيْتَنِي كُنْتُ تُرَابًا">
                            <outline text="Indeed, We have warned you of a near
punishment on the Day when a man will observe
what his hands have put forth and the disbeliever
will say, 'Oh, I wish I were dust'">
                                <outline text="إِنَّا">
                                    <outline text="Indeed We"></outline>
                                </outline>
                                <outline text="أَنْذَرْنَاكُمْ">
                                    <outline text="Have warned you"></outline>
                                </outline>
                                <outline text="عَذَابًا">
                                    <outline text="Of a punishment"></outline>
                                </outline>
                                <outline text="قَرِيبًا">
                                    <outline text="Near"></outline>
                                </outline>
                                <outline text="يَوْمَ">
                                    <outline text="On the Day"></outline>
                                </outline>
                                <outline text="يَنْظُرُ">
                                    <outline text="Will observe"></outline>
                                </outline>
                                <outline text="الْمَرْءُ">
                                    <outline text="A man"></outline>
                                </outline>
                                <outline text="مَا">
                                    <outline text="What"></outline>
                                </outline>
                                <outline text="قَدَّمَتْ">
                                    <outline text="Have put forth"></outline>
                                </outline>
                                <outline text="يَدَاهُ">
                                    <outline text="His hands"></outline>
                                </outline>
                                <outline text="وَيَقُولُ">
                                    <outline text="And will say"></outline>
                                </outline>
                                <outline text="الْكَافِرُ">
                                    <outline text="The disbeliever"></outline>
                                </outline>
                                <outline text="يَا">
                                    <outline text="Oh"></outline>
                                </outline>
                                <outline text="لَيْتَنِي">
                                    <outline text="I wish I"></outline>
                                </outline>
                                <outline text="كُنْتُ">
                                    <outline text="Were"></outline>
                                </outline>
                                <outline text="تُرَابًا">
                                    <outline text="Dust"></outline>
                                </outline>
                            </outline>
                        </outline>
                    </outline>
                </outline>
            </outline>
        </outline>
    </body>
</opml>